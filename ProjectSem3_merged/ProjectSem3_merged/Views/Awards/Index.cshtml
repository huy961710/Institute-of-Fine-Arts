@model IEnumerable<ProjectSem3_merged.Models.CombineModels>

@{
    ViewData["Title"] = "Index";
}

<h2>List of Awards</h2>
<br />
@using (Html.BeginForm("Index", "Awards", FormMethod.Post))
{
    <div><input type="text" name="aname" placeholder="Enter an award" /></div>
    <div>
        <label>Select a Competition: </label>
        @Html.DropDownList("cname", ViewBag.data as SelectList, "All")
    </div>
    <div><input type="submit" value="Search"></div>
}
<br />
<p>
    <a asp-action="Create">Create New Award</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>AwardName</th>
            <th>CompetitionName</th>
            <th>PostTime</th>
            <th>StaffName</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Award.AwardId</td>
                <td>@item.Award.AwardName</td>
                <td>@item.Competition.CompetitionName</td>
                <td>@item.Posting.PostDate</td>
                <td>@item.Staff.StaffName</td>
            </tr>
        }
    </tbody>
</table>
