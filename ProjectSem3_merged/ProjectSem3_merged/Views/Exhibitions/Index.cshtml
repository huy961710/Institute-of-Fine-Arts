@model IEnumerable<ProjectSem3_merged.Models.CombineModels>

@{
    ViewData["Title"] = "Index";
}

<h2>List of Exhibitions</h2>
<br />
@using (Html.BeginForm("Index", "Exhibitions", FormMethod.Post))
{
    <div>
        <input type="text" name="ename" placeholder="Enter an exhibition" /> | 
        <input type="text" name="pname" placeholder="Enter a place" />
    </div> 
    <div><input type="submit" value="Search"></div>
}
<br />
<p>
    <a asp-action="Create">Create New Exhibition</a>
</p>
<p>
    @Html.ActionLink("Assign Designs", "Index", "Displays")
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>ExhibitionName</th>
            <th>Place</th>
            <th>StartDate</th>
            <th>EndDate</th>
            <th>StaffName</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Exhibition.ExhibitionId</td>
                <td>@item.Exhibition.ExhibitionName</td>
                <td>@item.Exhibition.Place</td>
                <td>@item.Exhibition.StartDate.ToShortDateString()</td>
                <td>@item.Exhibition.EndDate.ToShortDateString()</td>
                <td>@item.Staff.StaffName</td>
                <td>
                    @Html.ActionLink("Update", "Edit", new { id = item.Exhibition.ExhibitionId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Exhibition.ExhibitionId }, new { onClick = "return confirm('Are you sure?')" })
                </td>
            </tr>
        }
    </tbody>
</table>

