@model IEnumerable<Manage_student.Models.Student>
@{
    ViewData["Title"] = "Index";
}

<h1>List of Students</h1>
<br />
<p>
    @Html.ActionLink("Create New Student", "Create", "Students")
</p>
<br />
<div style="overflow-x:auto">
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.StudentId)</th>
            <th>@Html.DisplayNameFor(model => model.Password)</th>
            <th>@Html.DisplayNameFor(model => model.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.LastName)</th>
            <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
            <th>@Html.DisplayNameFor(model => model.Gender)</th>
            <th>@Html.DisplayNameFor(model => model.Phone)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.JoinDate)</th>
            <th>@Html.DisplayNameFor(model => model.Address)</th>
            <th>@Html.DisplayNameFor(model => model.ProfileImage)</th>
            <th>@Html.DisplayNameFor(model => model.CompetitionId)</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.StudentId)</td>
                <td>@Html.DisplayFor(m => item.Password)</td>
                <td>@Html.DisplayFor(m => item.FirstName)</td>
                <td>@Html.DisplayFor(m => item.LastName)</td>
                <td>@Html.DisplayFor(m => item.DateOfBirth)</td>
                <td>@Html.DisplayFor(m => item.Gender)</td>
                <td>@Html.DisplayFor(m => item.Phone)</td>
                <td>@Html.DisplayFor(m => item.Email)</td>
                <td>@Html.DisplayFor(m => item.JoinDate)</td>
                <td>@Html.DisplayFor(m => item.Address)</td>
                <td><img src="@item.ProfileImage" width="100" height="100" /></td>
                <td>@Html.DisplayFor(m => item.CompetitionId)</td>
            </tr>
        }
    </table>
</div>
