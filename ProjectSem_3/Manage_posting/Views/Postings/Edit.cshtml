@model Manage_posting.Models.Posting

@{
    ViewData["Title"] = "Edit";
}

@{ 
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
    {
        Text = "best",
        Value = "best"
    });
    listItems.Add(new SelectListItem
    {
        Text = "better",
        Value = "better"
    });
    listItems.Add(new SelectListItem
    {
        Text = "good",
        Value = "good"
    });
    listItems.Add(new SelectListItem
    {
        Text = "moderate",
        Value = "moderate"
    });
    listItems.Add(new SelectListItem
    {
        Text = "normal",
        Value = "normal"
    });
    listItems.Add(new SelectListItem
    {
        Text = "disqualified",
        Value = "disqualified"
    });
}

<h2>Edit Posting</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostingId" />

            <input type="hidden" asp-for="PostDate" />

            <div class="form-group">
                <label>PostDescription: </label>
                @Html.EditorFor(model => model.PostDescription)
                @Html.ValidationMessageFor(model => model.PostDescription)
            </div>
            <div class="form-group">
                <label>Mark: </label>
                @Html.DropDownListFor(model => model.Mark, listItems, "-- Select Mark --")
            </div>
            <div class="form-group">
                <label>Remark: </label>
                @Html.EditorFor(model => model.Remark)
                @Html.ValidationMessageFor(model => model.Remark)
            </div>
            <input type="hidden" asp-for="DesignId" />
            <input type="hidden" asp-for="CompetitionId" />
            <div class="form-group">
                <label>StaffName: </label>
                 @Html.DropDownList("StaffId", (IEnumerable<SelectListItem>)ViewBag.data)
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <h3>@ViewBag.Msg</h3>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

